<div class="row">
<main class="col-md-12">
<br>
<h2>{{student.firstName}} {{student.lastName}} - Student: {{student.studentNum}}</h2>
<hr />
<form method="post" action="/student/update">
<input type="hidden" name="studentNum" value="{{student.studentNum}}" />
<fieldset>
<legend>Personal InformaMon</legend>
<div class="row">
<div class="col-md-6">
<div class="form-group">
<label>First Name:</label>
<input class="form-control" name="firstName" type="text" value="{{student.firstName}}" readonly/>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>Last Name:</label>
<input class="form-control" name="lastName" type="text" value="{{student.lastName}}" readonly/>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>Email:</label>
<input class="form-control" name="email" type="text" value="{{student.email}}" readonly/>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>Street:</label>
<input class="form-control" name="address" type="text" value="{{student.addressStreet}}" readonly/>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>City:</label>
<input class="form-control" name="address" type="text" value="{{student.addressCity}}" readonly/>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>Province:</label>
<input class="form-control" name="address" type="text" value="{{student.addressProvince}}" readonly/>
</div>
</div>
</div>
<div class="form-group">
<label>TA:</label>
<input class="form-control" name="address" type="checkbox" {{#if student.TA}}checked{{/if}} readonly/>
</div>
</div>
</div>
<div class="form-group">
<label>Status:</label>
<input class="form-control" name="status" type="radio" {{#equal student.status "Full Time"}}checked{{/equal}} readonly/> Full Time <br>
<input class="form-control" type="radio" name="status" value="Part Time" {{#equal student.status "Part Time"}}checked{{/equal}} readonly/> Part Time
</div>
</div>
</div>
<div class="col-md-6">
                        <div class="form-group">
                            <label>Course:</label>
                                {{#if viewData.courses}}
                                <select class="form-control" name="course" id="course">
                            <option value="">Select Course</option>
                            {{#each viewData.courses}}
                                <option value="{{courseId}}" {{#if selected}} selected {{/if}} >{{courseCode}} </option>
                           {{/each}}
                                            </select>
                                            {{else}}
                                    <div>No Courses</div>
                            </select>
                                                                        {{/if}}

                        </div>
</div>
</fieldset>
<hr />
<input type="submit" class="btn btn-primary float-right" value="Update Student" /><br /><br /><br />
</form>
</main>
</div>