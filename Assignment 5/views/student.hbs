<div class="row">
<main class="col-md-12">
<br>
<h2>{{student.firstName}} {{student.lastName}} - Student: {{student.studentNum}}</h2>
<hr />
<form method="post" action="/student/update">
<input type="hidden" name="studentNum" value="{{student.studentNum}}" />
<fieldset>
<legend>Personal InformaMon</legend>
<div class="row">
<div class="col-md-6">
<div class="form-group">
<label>First Name:</label>
<input class="form-control" name="firstName" type="text" value="{{student.firstName}}" readonly/>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>Last Name:</label>
<input class="form-control" name="lastName" type="text" value="{{student.lastName}}" readonly/>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>Email:</label>
<input class="form-control" name="email" type="text" value="{{student.email}}" readonly/>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>Street:</label>
<input class="form-control" name="address" type="text" value="{{student.addressStreet}}" readonly/>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>City:</label>
<input class="form-control" name="address" type="text" value="{{student.addressCity}}" readonly/>
</div>
</div>
<div class="col-md-6">
<div class="form-group">
<label>Province:</label>
<input class="form-control" name="address" type="text" value="{{student.addressProvince}}" readonly/>
</div>
</div>
</div>
<div class="form-group">
<label>TA:</label>
<input class="form-control" name="address" type="checkbox" {{#if student.TA}}checked{{/if}} readonly/>
</div>
</div>
</div>
<div class="form-group">
<label>Status:</label>
<input class="form-control" name="status" type="radio" {{#equal student.status "Full Time"}}checked{{/equal}} readonly/> Full Time <br>
<input class="form-control" type="radio" name="status" value="Part Time" {{#equal student.status "Part Time"}}checked{{/equal}} readonly/> Part Time
</div>
</div>
</div>
<div class="col-md-6">
                        <div class="form-group">
                            <label>Course:</label>
                            <select class="form-control" name="course">
                                <option value="1" {{#equal student.course "1"}}selected{{/equal}}>1</option>
                                <option value="2" {{#equal student.course "2"}}selected{{/equal}}>2</option>
                                <option value="3" {{#equal student.course "3"}}selected{{/equal}}>3</option>
                                <option value="4" {{#equal student.course "4"}}selected{{/equal}}>4</option>
                                <option value="5" {{#equal student.course "5"}}selected{{/equal}}>5</option>
                                <option value="6" {{#equal student.course "6"}}selected{{/equal}}>6</option>
                                <option value="7" {{#equal student.course "7"}}selected{{/equal}}>7</option>
                                <option value="8" {{#equal student.course "8"}}selected{{/equal}}>8</option>
                                <option value="9" {{#equal student.course "9"}}selected{{/equal}}>9</option>
                                <option value="10" {{#equal student.course "10"}}selected{{/equal}}>10</option>
                                <option value="11" {{#equal student.course "11"}}selected{{/equal}}>11</option>
                            </select>
                        </div>
</div>
</fieldset>
<hr />
<input type="submit" class="btn btn-primary float-right" value="Update Student" /><br /><br /><br />
</form>
</main>
</div>